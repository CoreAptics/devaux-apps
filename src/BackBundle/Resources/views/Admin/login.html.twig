{% extends 'base_admin.html.twig' %}
{% block full %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <section id='login'>
        <div class="block">
            <div class="logo mb" style="background-image: url({{asset("assets/images/placeholders/logo.png")}})"></div>
            <form method="post" action="{{ path('back_admin_login_check') }}" class="col md-12">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="text" id="email" name="_username" value="{{ last_username }}"/>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe:</label>
                    <input type="password" id="password" name="_password"/>
                </div>
                <div class="form-group nmb text-center">
                    <button type="submit">Connexion</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
