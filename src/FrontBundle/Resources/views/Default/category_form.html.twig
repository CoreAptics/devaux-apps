<label for="">Sélectionner un catégorie</label>
<div class="main">
    <div class="second">
        {% for category in listCategory %}
            {% if loop.index is divisible by(2) %}
                <a href="#" data-section="{{ category.id }}">{{ category.name }}</a>
            {% endif %}
        {% endfor %}
    </div>
    <div class="second">
        {% for category in listCategory %}
            {% if loop.index is not divisible by(2) %}
                <a href="#" data-section="{{ category.id }}">{{ category.name }}</a>
            {% endif %}
        {% endfor %}
    </div>
</div>